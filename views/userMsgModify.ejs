<div class="msg-form-container">
    <form class="msg-form reg-form col-sm-offset-4 col-sm-4 form-horizontal" role="form" method="post" action="/userMsgModify">
        <fieldset>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="username">用户名</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="username" name="username" placeholder="用户名" required>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">性别</label>
                <div class="col-sm-9">
                    <select class="form-control" name="gender">
                      <option class="col-sm-9" value="male">男</option>
                      <option class="col-sm-9" value="female">女</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">个人说明</label>
                <div class="controls col-sm-9">
                    <div class="textarea">
                        <textarea type="" class="form-control" name="personal_desc" placeholder="请说点什么介绍一下自己..."> </textarea>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="password">密码</label>
                <div class="col-sm-9">
                    <input type="password" class="form-control" id="password" name="password" placeholder="密码" required>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-9">
                    <button type="submit" class="btn btn-primary">修改</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>